<?xml version="1.0" encoding="utf-8"?>

<layout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewmodel"
            type="com.udacity.shoestore.ui.viewmodel.ShoesViewModel" />
    </data>
    <FrameLayout
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragments.ShoeListScreenFragment">

        <TextView
            android:id="@+id/addShoesTextView"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:text="@string/add_shoes"
            android:layout_height="wrap_content"></TextView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout

                android:id="@+id/showlistLinearLayout"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">




            </LinearLayout>


        </ScrollView>


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:src="@drawable/ic_add"
            android:contentDescription="@string/add_shoe"
            android:layout_margin="16dp" />

    </FrameLayout>

</layout>
